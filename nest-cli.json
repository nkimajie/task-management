{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "**/*.yml", "outDir": "dist/" },
      { "include": "**/*.html", "outDir": "dist/src" }
    ],
    "watchAssets": true
  }
}
